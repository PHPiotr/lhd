<h1 style="color: #2e3192; text-transform: uppercase; font-weight: normal">Part exchange</h1>
<p style="color: #2e3192;text-decoration: underline;">Sent at: {{ "now"|date("m/d/Y H:i:s") }}</p>
<table style="width: 70%">
    {% for key, value in data %}
        {% if key == 'name' %}
            <tr>
                <th style="text-align: right; border: none; color: #ff0000; font-size: 20px; padding: 5px; width: 30%; text-transform: uppercase;">
                    About me
                </th>
                <td style="border: none;"></td>
            </tr>
        {% endif %}
        {% if key == 'reg_number' %}
            <tr>
                <th style="text-align: right; border: none; color: #ff0000; font-size: 20px; padding: 5px; width: 30%; text-transform: uppercase;">
                    About my car
                </th>
                <td style="border: none;"></td>
            </tr>
        {% endif %}
        <tr>
            <th style="text-align: right; border: none; color: #2e3192; font-size: 20px; padding: 5px; width: 30%; text-transform: uppercase;">
                {{ key | replace({'_': ' '}) }}
            </th>
            <td style="border: 1px solid #2e3192; color: #2e3192; font-size: 20px; padding: 5px; width: 50%;">
                {{ value }}
            </td>
        </tr>
    {% endfor %}
</table>